   "source": [
    "# Math chain\n",
    "\n",
    "This notebook showcases using LLMs and Python REPLs to do complex word math problems."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "id": "44e9ba31",
   "metadata": {},
   "outputs": [],
   "source": [
    "import asyncio\n",
    "from langchain.chains import LLMMathChain\n",
    "from langchain_openai import OpenAI\n",
    "import sys"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "id": "44e9ba31",
   "metadata": {},
   "outputs": [],
   "source": [
    "async def main():\n",
    "    try:\n",
    "        llm = OpenAI(temperature=0)\n",
    "        llm_math = LLMMathChain.from_llm(llm, verbose=True)\n",
    "        while True:\n",
    "            problem = input('Enter a math problem (type "quit" to exit): ')\n",
    "            if problem.lower() == 'quit':\n",
    "                break\n",
    "            result = await llm_math.invoke(problem)\n",
    "            print(f'Answer: {result}')\n",
    "    except Exception as e:\n",
    "        print(f'An error occurred: {e}', file=sys.stderr)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "id": "44e9ba31",
   "metadata": {},
   "outputs": [],
   "source": [
    "if __name__ == '__main__':\n",
    "    asyncio.run(main())"
   ]
  },
