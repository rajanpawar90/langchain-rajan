# Grammar for a subset of JSON

root  ::= object | array
value ::= object | array | string | number | boolean | "null"

object ::=
  "{" ws (
            string ":" ws value
    ("," ws string ":" ws value)*
  )? "}"  | "{}"

array  ::=
  "[" ws (
            value
    ("," ws value)*
  )? "]"  | "[]"

string  ::=
  "\"" (
    ~"\""  (* any character except double quote *)
    | "\\" (["\\/bfnrt] | "u" hex hex hex hex)
  )* "\"" ws

number  ::= "-"? (
    [0-9]+
    | [0-9]+ "." [0-9]* (("e" | "E") ("+" | "-")? [0-9]+)?
    | "." [0-9]+ (("e" | "E") ("+" | "-")? [0-9]+)?
) ws

boolean ::= ("true" | "false") ws

ws ::= ([ \t\n] ws)?
hex ::= [0-9a-fA-F]
